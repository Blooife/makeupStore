@using makeupStore.Web.Utility
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ProductDto

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post">
    <div class="productDetails">
        <img src="~/css/1.jpg" height=150px width=150px>
        <div>
            <h1>@Model.Name</h1>
            <p>@Model.Category</p>
            <h2>@((Model.Price).ToString("c"))</h2>
            <div class = "cartWrapper">
                <a class="addBtn" type="button" asp-action="" asp-route-productId = "">Update</a>
                <a class="addBtn" type="button" asp-action="" asp-route-productId = "">Delete</a>
            </div>
            <p class ="productDescr">@Model.Description</p>
        </div>
    </div>
</form>